<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="report_proforma_custom">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="header">
                        <div class="row" style="display:block;margin:0 auto;">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                                style="height: 120px; width:60%;
                                display:block;margin:0 auto;" alt="Logo"/>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                    <div class="page">
                        <div class="row" style="position: relative;text-align:center;">
                            <span style="font-weight:bold;text-decoration:underline;
                                position: absolute;left: 0; right: 0; margin: auto;">
                                PRO FORMA
                            </span>
                        </div>
                        <br/><br/><br/><br/><br/>
                        <div class="row">
                            <div class="col-8">
                                <span style="font-weight:bold;">THE BUYER:</span>
                                <span style="padding-left:5px;" t-esc="o.partner_id.name"/>
                                <br/>
                                <span style="font-weight:bold;">ADD:</span>
                                <span style="padding-left:5px;" t-esc="o.partner_id.city"/>
                                <span style="padding-left:5px;" t-esc="o.partner_id.country_id.name"/>
                            </div>
                            <div class="col-4">
                                <span style="font-weight:bold;">PR No.</span>
                                <span style="padding-left:5px;" t-esc="o.client_order_ref"/>
                                <br/>
                                <span style="font-weight:bold;">Date:</span>
                                <span style="padding-left:5px;" t-esc="o.date_order.strftime('%d-%m-%Y')"/>
                                <br/>
                                <span style="font-weight:bold;">Currency:</span>
                                <span style="padding-left:5px;" t-esc="o.currency_id.name"/>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <p style="font-weight:bold;text-decoration:underline">
                                SUBJECT: <span t-esc="o.subject"/>
                            </p>

                        </div>
                        <br/>
                        <div class="row">
                            <table class="table table-bordered" style="border:1px solid black;">
                                <thead>
                                    <th>S/N</th>
                                    <th>Make</th>
                                    <th>Model Specification</th>
                                    <th>HS-Code</th>
                                    <th>Country of Origin</th>
                                    <th>No. of Unit</th>
                                    <th>Unit Price</th>
                                    <th>Total Price</th>
                                </thead>
                                <tbody>
                                    <t t-set="counter" t-value="1"/>
                                    <t t-foreach="o.order_line" t-as="line">
                                        <tr>
                                            <td style="text-align:center;">
                                                <span t-esc="counter"/>
                                            </td>
                                            <td style="text-align:center;">
                                                <span t-esc="line.product_id.name"/><br/>
                                                <t t-if="line.product_id.x_studio_vehicle_type">
                                                    <span>Model:</span>
                                                    <span style="padding-left:5px;" t-esc="line.product_id.x_studio_vehicle_type"/>
                                                </t>
                                            </td>
                                            <td style="text-align:center;">
                                                <span t-esc="line.name"/><br/>
                                                <t t-if="line.product_id.x_studio_vehicle_type">
                                                    <span>Year of production:</span>
                                                    <span style="padding-left:5px;" t-esc="o.get_product_lot(line)"/>
                                                </t>
                                            </td>
                                            <td style="text-align:center;">
                                                <span t-esc="line.product_id.hs_code"/>
                                            </td>
                                            <td style="text-align:center;">
                                                <span t-esc="o.get_country_origin(line)"/>
                                            </td>
                                            <td style="text-align:center;">
                                                <span t-esc="line.product_uom_qty"/>
                                            </td>
                                            <td style="text-align:center;">
                                                <span t-esc="'{:,}'.format(line.price_unit)"/>
                                            </td>
                                            <td style="text-align:center;">
                                                 <span t-esc="'{:,}'.format(line.price_subtotal)"/>
                                            </td>
                                            <t t-set="counter" t-value="counter + 1"/>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td colspan="6"></td>
                                        <td style="text-align:center;">
                                            <span style="font-weight:bold">
                                                Total
                                            </span>
                                        </td>
                                        <td style="text-align:center;">
                                            <span style="font-weight:bold;"
                                                    t-esc="'{:,}'.format(o.amount_total)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="8">
                                            <p style="font-weight:bold">
                                                Total Amount To Be Paid <span
                                                    t-esc="o.currency_id.name"/>- <span
                                                    t-esc="'{:,}'.format(o.amount_total)"/>/- (<span style="text-transform: capitalize;"
                                                    t-esc="o.amount_in_words(o.amount_total)"/>)
                                            </p>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td colspan="8"/>
                                    </tr>
                                    <tr>
                                        <td colspan="8">
                                            <span style="font-weight:bold">
                                                BANK ACCOUNT DETAIL:-
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="8">
                                            <p>
                                                BENEFICIARY: <span t-esc="o.company_id.name"/><br/>
                                                Bank Details: <span t-esc="o.company_id.bank_details"/><br/>
                                                Bank Address: <span t-esc="o.company_id.bank_address"/><br/>
                                                UAE SWIFT CODE <span t-esc="o.company_id.swift_code"/><br/>
                                                ACCOUNT NO. (<span t-esc="o.currency_id.name"/>)
                                                <span t-esc="o.company_id.account_no"/> <br/>
                                                IBAN No. (<span t-esc="o.currency_id.name"/>)
                                                <span t-esc="o.company_id.iban_no"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="8"/>
                                    </tr>
                                    <tr>
                                        <td colspan="8">
                                            <p>
                                                <span style="font-weight:bold;text-decoration:underline;">
                                                    THE BUYER HAVE AGREED TO EXECUTE THE FOLLOWING TRANSACTION ACCORDING
                                                    TO THE TERMS AND CONDITIONS STIPULATED BELOW:</span><br/>
                                                    1. Payment Term: <span t-esc="o.payment_term_id.name"/><br/>
                                                    <span t-esc="o.sale_note"/>
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <br/>
                        <div class="row">
                            <span style="font-weight:bold;white-space:nowrap;">
                                FOR SELLER (Signature &amp; Stamp):
                            </span>
                        </div>
                    </div>
                    <div class="footer">
                        <div class="text-center">
                            <ul class="list-inline">
                                <t t-if="o.company_id.name">
                                    <li class="list-inline-item">
                                        <span style="font-weight:bold;font-style: italic;color:#5A5A5A;"
                                              t-esc="o.company_id.name"/>,
                                    </li>
                                </t>
                                <t t-if="o.company_id.street">
                                    <li class="list-inline-item">
                                        <span style="font-weight:bold;font-style: italic;color:#5A5A5A;"
                                        t-esc="o.company_id.street"/>,
                                    </li>
                                </t>
                                <t t-if="o.company_id.street2">
                                    <li class="list-inline-item">
                                        <span style="font-weight:bold;font-style: italic;color:#5A5A5A;"
                                              t-esc="o.company_id.street2"/>,
                                    </li>
                                </t>
                                <t t-if="o.company_id.country_id.name">
                                    <li class="list-inline-item">
                                        <span style="font-weight:bold;font-style: italic;color:#5A5A5A;"
                                              t-esc="o.company_id.country_id.name"/>
                                    </li>
                                </t>
                                <br/>
                                <t t-if="o.company_id.phone">
                                    <li class="list-inline-item">
                                        <span style="font-weight:bold;font-style: italic;color:#5A5A5A;"
                                              t-esc="o.company_id.phone"/>
                                    </li>
                                </t>
                                <t t-if="o.company_id.mobile">
                                    <li class="list-inline-item">
                                        <span style="font-weight:bold;font-style: italic;color:#5A5A5A;"
                                              t-esc="o.company_id.mobile"/>
                                    </li>
                                </t>
                                <t t-if="o.company_id.email">
                                    <li class="list-inline-item">
                                        <span style="font-weight:bold;font-style: italic;color:#5A5A5A;"
                                              t-esc="o.company_id.email"/>
                                    </li>
                                </t>
                            </ul>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>