<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="inherit_account_move_view_form" model="ir.ui.view">
       <field name="name">inherit.account.move.view.form</field>
       <field name="model">account.move</field>
       <field name="inherit_id" ref="account.view_move_form"/>
       <field name="arch" type="xml">
           <xpath expr="//field[@name='partner_shipping_id']" position="after">
               <field name="mode_of_transport" invisible="1"/>
               <field name="mode_of_dispatch" invisible="1"/>
               <field name="vehicle_related"/>
               <field name="consignee_id"/>
               <field name="bl_no"/>
           </xpath>
           <xpath expr="//div[@name='journal_div']" position="after">
               <field name="total_product_weight"/>
           </xpath>
           <xpath expr="//group[@class='oe_invoice_lines_tab']/group" position="after">
               <group colspan="8">
                    <field name="custom_invoice_note" placeholder="Invoice Terms and Conditions" colspan="2" nolabel="1"/>
                </group>
           </xpath>
           <xpath expr="//page[@name='other_info']" position="inside">
                <group>
                    <group>
                        <field name="method_of_dispatch"/>
                        <field name="type_of_shipment"/>
                        <field name="delivery_term"/>
                        <field name="voyage_no"/>
                        <field name="terms_method_payment"/>
                        <field name="port_of_discharge"/>
                        <field name="final_destination"/>
                    </group>
                    <group>
                        <field name="transport_type"/>
                        <field name="country_final_destination"/>
                        <field name="port_of_loading"/>
                        <field name="departure_date"/>
                        <field name="marine_cover"/>
                        <field name="letter_of_credit"/>
                    </group>
                </group> 
            </xpath>           
       </field>
    </record>

</odoo>