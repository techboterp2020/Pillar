<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_production_form_simple" model="ir.ui.view">
        <field name="name">stock.lot.tree.inherited</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="engine_no" readonly="1" optional="show"/>
                <field name="chassis_no" readonly="1" optional="show"/>
                <field name="key_no" readonly="1" optional="show"/>
                <field name="model_year" readonly="1" optional="show"/>
                <field name="color_internal" readonly="1" optional="show"/>
                <field name="color_external" readonly="1" optional="show"/>
                <field name="make" readonly="1" optional="show"/>
                <field name="bill_of_entry" readonly="1" optional="show"/>
                <field name="bill_of_lading" readonly="1" optional="show"/>
            </xpath>
        </field>
    </record>
    <record id="stock_lot_form_inherited" model="ir.ui.view">
        <field name="name">stock.lot.from.inherited</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='description']" position="after">
                <page string="Details" name="details">
                    <group>
                        <group>
                            <field name="engine_no" readonly="1"/>
                            <field name="chassis_no" readonly="1"/>
                            <field name="key_no" readonly="1"/>
                            <field name="model_year" readonly="1"/>
                             <field name="make" readonly="1"/>
                        </group>
                        <group>
                            <field name="color_internal" readonly="1"/>
                            <field name="color_external" readonly="1"/>
                            <field name="bill_of_entry" readonly="1"/>
                            <field name="bill_of_lading" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>